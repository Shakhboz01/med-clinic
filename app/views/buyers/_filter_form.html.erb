<i title='<%= t('buyers.filter.search_icon_title') %>' class="fa-solid fa-magnifying-glass fa-lg" id='toggle-button'></i>
<br>
<div id='filter-toggle'>
  <%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="card shadow-lg">
      <div class="row">
        <div class="form-group col-xs-12 col-sm-4">
          <%= f.label :name_cont, t('buyers.filter.name_contains'), class: 'control-label' %>
          <%= f.text_field :name_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-4">
          <%= f.label :active_true, t('buyers.filter.active_buyers'), class: ' form-control' %>
          <%= f.check_box :active_true, {}, 1, nil %>
        </div>
        <div class="form-group col-xs-12 col-sm-4">
          <%= f.submit t('buyers.filter.search'), class: 'btn btn-primary' %>
          <%= link_to t('buyers.filter.cancel'), request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).on('turbo:load', function() {
    $('#filter-toggle').hide()
    $('#toggle-button').click(function(){
      $('#filter-toggle').toggle()
    })
  })
</script>
