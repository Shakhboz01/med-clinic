<div class="my-5 m-1">
  <% if @user.врач? || @user.кассир?  %>
    <button class="text-center center btn btn-warning" onclick="window.location.reload();">Обновить</button>
  <% end %>

  <% if @user.админ? %>
    <%= link_to 'Экспорт в Excel', buyers_url(q: params.dig(:q)&.permit!, format: :xlsx), class: 'btn btn-success' %>
  <% end %>

  <% unless @user.врач? %>
    <%= render 'filter_form', q: @q, url: request.path %>
  <% end %>

  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Mijozlar</h3>
    </div>

    <div class="card-body">
      <%= render 'buyers', buyers: @buyers %>
    </div>
    <%= paginate @buyers %>
  </div>
</div>
