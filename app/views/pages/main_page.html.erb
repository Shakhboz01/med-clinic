<div class='row'>
  <div class='col-sm-6 main-page-header'>
    <div>
      <h4 class='text-center'>Bemorlar</h4>
      <div class='counterparties-max-height'>
        <%= render 'buyers/buyers', buyers: @buyers, shrink: true %>
      </div>
    </div>
  </div>
  <div class='col-sm-6'>
    <div>
      <h4 class='text-center'>Yuk beruvchilar</h4>
      <div class='counterparties-max-height'>
        <%= render 'providers/providers', providers: @providers, shrink: true %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).on('turbo:load', function(){
    const url = new URL(window.location.href);

    if (url.searchParams.has('reload')) {
      // Remove all search params to construct a clean URL
      url.search = '';

      // Reload the page without any parameters
      window.location.href = url.href;
    }
  });
</script>
