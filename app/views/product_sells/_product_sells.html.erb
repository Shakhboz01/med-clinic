<%= turbo_frame_tag 'product_sells' do %>
  <% if defined?(shrink) %>
    <div class='d-flex table-warning justify-content-around'>
      <% if defined?(datetime) %>
        <b><%= t('product_sells.date_label') %>: <%= strf_datetime(datetime, true)  %></b>
      <% end %>

      <% if defined?(total_paid) %>
        <b><%= t('product_sells.total_paid_label') %>: <%= currency_convert(sale.price_in_usd, total_paid) %></b>
      <% end %>

      <% if defined?(buyer) %>
        <b><%= t('product_sells.total_debt_label') %>: <%= num_to_usd(buyer.calculate_debt_in_uzs) %> | <%= number_to_currency buyer.calculate_debt_in_usd %></b>
      <% end %>
    </div>
  <% end %>
  <table class="table table-sm table-hover table-bordered table-striped">
    <thead>
      <tr>
        <% unless defined?(shrink) %>
          <th>ID</th>
          <th><%= t('product_sells.customer_label') %></th>
        <% end %>
        <th><%= t('product_sells.product_label') %></th>
        <th><%= t('product_sells.quantity_label') %></th>
        <th><%= t('product_sells.price_label') %></th>
        <th><%= t('product_sells.total_label') %></th>
        <% unless defined?(shrink) && policy(Sale.last).profit? %>
          <th><%= t('product_sells.total_profit_label') %></th>
        <% end %>
        <% unless defined?(shrink) %>
          <th><%= t('product_sells.sale_date_label') %></th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% product_sells.order(created_at: :desc).each do |product_sell| %>
          <%= render 'product_sells/product_sell', product_sell: product_sell, shrink: defined?(shrink), show_delete_button: defined?(buyer) %>
        <% end %>

        <% if defined?(shrink) %>
          <tr>
            <th></th>
            <th><%= product_sells.sum(:amount) %></th>
            <th></th>
            <th><%= currency_convert sale.price_in_usd, sale.total_price %></th>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>
