<%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
  <div class="card shadow-lg my-3">
    <div class="card-body">
      <div class="row">
        <div class="form-group col-xs-12 col-sm-4">
          <%= f.label :name_cont, t('packs.filter_form.product_name'), class: 'control-label' %>
          <%= f.text_field :name_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :code_cont, t('packs.filter_form.product_code'), class: 'control-label' %>
          <%= f.text_field :code_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-2">
          <%= f.label :product_category_id_eq, t('packs.filter_form.product_category'), class: 'control-label' %>
          <%= f.select :product_category_id_eq, ProductCategory.pluck(:name, :id), {include_blank: true}, class: 'form-control' %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="form-group col-xs-12 col-sm-6">
          <%= f.submit t('packs.filter_form.search'), class: 'btn btn-primary' %>
          <%= link_to t('packs.filter_form.reset'), request.path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
