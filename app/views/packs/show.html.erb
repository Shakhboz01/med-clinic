<h3><%= t('packs.title') %></h3>
<%= link_to t('packs.add_new'), new_pack_usage_path(pack_id: @pack.id), class: 'btn btn-success' %>
<br/><br/>
<ul>
  <li>
    <%= t('packs.price_per_item') %>: <%= currency_convert(@pack.price_in_usd, @pack.buy_price) %> |
    <%= button_to update_buy_price_pack_path(@pack), method: :post do %>
      <i title="<%= t('packs.rotate_price') %>" class="fa-solid fa-arrows-rotate"></i>
    <% end %>
  </li>
</ul>
<%= render 'pack_usages/pack_usages', pack_usages: @pack.pack_usages %>
