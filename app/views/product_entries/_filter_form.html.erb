<br>
<div class='card' id='filter-toggle'>
  <h4><%= t('product_entries.filter_title') %>:</h4>
  <%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="card shadow-lg">
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :pack_id_eq, t('product_entries.pack_label'), class: 'control-label' %>
          <%= f.select :pack_id_eq, Pack.pluck(:name, :id), { include_blank: true }, class: 'form-control' %>
        </div>
        <% if ENV.fetch('HAS_LOCAL_ENTRY') %>
          <div class="form-group col-xs-12 col-sm-3">
            <%= f.label :user_id_eq, t('product_entries.user_label'), class: 'control-label' %>
            <%= f.select :user_id_eq, User.pluck(:name, :id), { include_blank: true }, class: 'form-control' %>
          </div>
        <% end %>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :created_at_gteq, t('product_entries.from_label'), class: 'control-label' %>
          <%= f.text_field :created_at_gteq, value: @q.created_at_gteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :created_at_lteq, t('product_entries.to_label'), class: 'control-label' %>
          <%= f.text_field :created_at_lteq, value: @q.created_at_lteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
      </div>
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-6">
          <%= f.submit t('product_entries.search_button'), class: 'btn btn-primary' %>
          <%= link_to t('product_entries.cancel_button'), request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
