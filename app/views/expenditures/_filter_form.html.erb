<div class="card" id="filter-toggle">
  <%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="card shadow-lg">
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :created_at_gteq, t('filter.created_at_from'), class: 'control-label' %>
          <%= f.text_field :created_at_gteq, value: @q.created_at_gteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :created_at_lteq, t('filter.created_at_to'), class: 'control-label' %>
          <%= f.text_field :created_at_lteq, value: @q.created_at_lteq, class: 'datepicker form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :expenditure_type_eq, t('filter.expenditure_type'), class: 'control-label' %>
          <%= f.select :expenditure_type_eq, Expenditure.expenditure_types.keys.map { |unit| [Expenditure.human_attribute_name("unit.#{unit}"), unit] }, {include_blank: t('filter.select_option')}, class: 'form-control' %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :price_in_usd_true, t('filter.price_in_usd'), class: 'control-label' %>
          <%= f.select :price_in_usd_true, [['Да', true], ['Нет', false]], {include_blank: t('filter.select_option')}, class: 'form-control' %>
        </div>
      </div>
      <div class="row card-body">
        <div class="form-group col-xs-12 col-sm-6">
          <%= f.submit t('filter.search'), class: 'btn btn-primary' %>
          <%= link_to t('filter.cancel'), request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
