<%= simple_form_for(product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Название' %>
    <%= f.input :code, input_html: {value: product.persisted? ? product.code : random_code}, label: 'код' %>
    <%= f.input :barcode, input_html: {value: product.persisted? ? product.barcode : random_barcode}, label: 'баркод' %>
    <%= f.input :image, input_html: { accept: "image/*" }, label: 'Загрузить изображение' %><br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Завершить' %>
  </div>
<% end %>
